                      </div>
                    </div>
                  </div>
                </div>
                <!--Grid row-->
                <div class="row">
                  <!--Grid column-->
                  <div class="col-md-12 mb-2">
                    <!--firstName-->
                    <div class="md-form">
                      <input
                        type="text"
                        id="firstName"
                        class="form-control"
                        name="name"
                        required
                      />
                      <label for="firstName" class="">Name</label>
                    </div>

                    <div class="md-form">
                      <input
                        type="text"
                        id="lastname"
                        class="form-control"
                        name="painter"
                        required
                      />
                      <label for="lastname" class=""
                        >Painter/crafter name</label
                      >
                    </div>
                  </div>
                </div>

                <div class="md-form">
                  <textarea
                    id="form7"
                    class="md-textarea form-control"
                    rows="3"
                    name="description"
                    required
                  ></textarea>
                  <label for="form7">describe the art</label>
                </div>

                <!--address-->
                <div class="md-form mb-5">
                  <input
                    type="text"
                    id="address"
                    class="form-control"
                    placeholder="1234 Main St"
                    name="address1"
                    required
                  />
                  <label for="address" class="">Address</label>
                </div>

                <!--address-2-->
                <div class="md-form mb-5">
                  <input
                    type="text"
                    id="address-2"
                    class="form-control"
                    placeholder="Apartment or suite"
                    name="address2"
                    required
                  />
                  <label for="address-2" class="">Address 2 (optional)</label>
                </div>
                <!--Grid row-->
                <button class="btn btn-lg btn-block mybtn" type="submit">
                  Upload art
                </button>
              </form>
            </div>
            <br />
            <!--/.Card-->
          </div>
          <!--Grid column-->

          <!--Grid column-->
        </div>
        <!--Grid row-->
      </div>
      <br />
      <br />
    </main>
    <script>
      (function () {
        "use strict";
        window.addEventListener(
          "load",
          function () {
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.getElementsByClassName("needs-validation");
            // Loop over them and prevent submission
            var validation = Array.prototype.filter.call(forms, function (
              form
            ) {
              form.addEventListener(
                "submit",
                function (event) {
                  if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                  }
                  form.classList.add("was-validated");
                },
                false
              );
            });
          },
          false
        );
      })();
    </script>
    <%-include("partials/foot") -%>
  </body>
</html>
