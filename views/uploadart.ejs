                      <div
                        class="text-center d-inline-block disParent"
                        style="margin-bottom: 40px"
                      >
                        <img
                          class="d-block mx-auto disImg"
                          src="https://res.cloudinary.com/dpvxp3lsz/image/upload/v1601695499/arts/elements-of-art-6_ry1vp6.webp"
                          style="width: 100px; margin-bottom: 10px"
                        /><label class="btn secbtn" for="bannerInput1"
                          ><i class="fa fa-file" style="width: 25px"></i
                          >Upload</label
                        ><input
                          type="file"
                          id="bannerInput1"
                          class="bannerInput"
                          hidden=""
                          name="img2"
                          required
                        />
                        <div class="valid-feedback">Looks good!</div>
                      </div>
                      <div
                        class="text-center d-inline-block disParent"
                        style="margin-bottom: 40px"
                      >
                        <img
                          class="d-block mx-auto disImg"
                          src="https://res.cloudinary.com/dpvxp3lsz/image/upload/v1601695499/arts/elements-of-art-6_ry1vp6.webp"
                          style="width: 100px; margin-bottom: 10px"
                        /><label class="btn secbtn" for="bannerInput2"
                          ><i class="fa fa-file" style="width: 25px"></i
                          >Upload</label
                        ><input
                          type="file"
                          id="bannerInput2"
                          class="bannerInput"
                          hidden=""
                          name="img3"
                          required
                        />
