<!DOCTYPE html>
<html lang="en">
  <%-include("partials/head") -%>
  <title>Sign up</title>
  <body>
    <style>
      body {
        background-image: url("assets/img/background.svg");
        z-index: -2;
      }
    </style>
    <div class="container justify-content-lg-center this">
      <section id="register-form">
        <!--Title-->
        <br />
        <!--Grid row-->
        <div class="row">
          <!--Grid column-->
          <div class="col-md-12 mb-4">
            <!--Section: Live preview-->
            <section class="pr-1">
              <!-- Material form register -->
              <div class="card">
                <h5
                  class="card-header white-text text-center py-4"
                  id="mycolor"
                >
                  <strong>Sign up</strong>
                </h5>

                <!--Card content-->
                <div class="card-body px-lg-5 pt-0">
                  <!-- Form -->
                  <form
                    class="text-center"
                    action="/register"
                    method="POST"
                    style="color: #757575"
                  >
                    <div class="form-row">
                      <div class="col">
                        <!-- First name -->
                        <div class="md-form">
                          <input
                            type="text"
                            id="materialRegisterFormFirstName"
                            class="form-control"
                            name="name"
                          />
                          <label for="materialRegisterFormFirstName"
                            >name</label
                          >
                        </div>
                      </div>
                      <!-- <div class="col">
                       
                        <div class="md-form">
                          <input
